<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:paddingTop="150px">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="406dp"
            android:layout_height="149dp" tools:layout_editor_absoluteX="2dp"
            android:padding="15px" android:id="@+id/layoutInputDados" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/linearLayout">
        <TextView
                android:text="Quantas horas vocÃª dormiu hoje?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView" android:textSize="20sp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="10"
                android:id="@+id/etTime"/>
        <Button
                android:text="Enviar dados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnEnviardados"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="117dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="3dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/linearLayout">
        <Button
                android:text="Home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button2" android:layout_weight="1"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>